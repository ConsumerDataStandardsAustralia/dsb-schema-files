{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://consumerdatastandards.org.au/v1.0.0/accounts",
	"type": "object",
	"required": [
		"data",
		"links",
		"meta"
	],
	"properties": {
		"data": {
			"type": "object",
			"required": [
				"accounts"
			],
			"properties": {
				"accounts": {
					"type": "array",
					"items": {
						"type": "object",
						"required": [
						    "accountId",
						    "displayName",
						    "maskedNumber",
						    "productCategory",
						    "productName"
						],
						"properties": {
						    "accountId": {
								"type": "string",
								"pattern": "^[\\x00-\\x7F]+$"
							},
						    "creationDate": {
								"type": "string",
								"format": "date-time"
							},
						    "displayName": {
								"type": "string"
							},
						    "nickname": {
								"type": "string"
							},
						    "openStatus": {
								"type": "string",
								"enum": [
								    "OPEN",
								    "CLOSED"
								    ]
							},
						    "isOwned": {
								"type": "boolean"
							},
						    "maskedNumber": {
								"type": "string"
							},
						    "productCategory": {
								"type": "string",
								"enum": [
                                	"TRANS_AND_SAVINGS_ACCOUNTS",
                                	"TERM_DEPOSITS",
                                	"TRAVEL_CARDS",
                                	"REGULATED_TRUST_ACCOUNTS",
                                	"RESIDENTIAL_MORTGAGES",
                                	"CRED_AND_CHRG_CARDS",
                                	"PERS_LOANS",
                                	"MARGIN_LOANS",
                                	"LEASES",
                                	"TRADE_FINANCE",
                                	"OVERDRAFTS",
                                	"BUSINESS_LOANS"
                                	]
							},
						    "productName": {
								"type": "string"
							}
						}
					}
				}
			}
		},
		"links": {
			"type": "object",
			"required": [
				"self"
			],
			"properties": {
				"self": {
					"type": "string",
					"format": "uri"
				},
				"first": {
					"type": "string",
					"format": "uri"
				},
				"last": {
					"type": "string",
					"format": "uri"
				},
				"next": {
					"type": "string",
					"format": "uri"
				},
				"prev": {
					"type": "string",
					"format": "uri"
				}
			}
		},
		"meta": {
			"type": "object",
			"required": [
				"totalPages",
				"totalRecords"
			],
			"properties": {
				"totalRecords": {
					"type": "integer",
					"minimum": 0
				},
				"totalPages": {
					"type": "integer",
					"minimum": 0
				}
			}
		}
	}
}
