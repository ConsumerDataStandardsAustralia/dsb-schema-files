 {
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://consumerdatastandards.org.au/v1.0.0/balance",
	"type": "object",
	"required": [
		"data",
		"links"
	],
	"properties": {
		"data": {
			"type": "object",
			"required": [
			    "accountId",
			    "currentBalance",
			    "availableBalance"
			],
			"properties": {
			    "accountId": {
					"type": "string",
					"pattern": "^[\\x00-\\x7F]+$"
				},
			    "currentBalance": {
                    "type" : "string",
                    "pattern": "^[-]?\\d{1,16}[.]\\d{2,}$"
				},
			    "availableBalance": {
                    "type" : "string",
                    "pattern": "^[-]?\\d{1,16}[.]\\d{2,}$"
				},
			    "creditLimit": {
                    "type" : "string",
                    "pattern": "^[-]?\\d{1,16}[.]\\d{2,}$"
				},
			    "amortisedLimit": {
                    "type" : "string",
                    "pattern": "^[-]?\\d{1,16}[.]\\d{2,}$"
				},
			    "currency": {
                    "type" : "string",
                    "pattern": "^[A-Z]{3,3}$"
				},
			    "purses": {
					"type": "array",
					"items": {
						"type": "object",
						"required": [
						    "amount"
						],
						"properties": {
						    "amount": {
                                "type" : "string",
                                "pattern": "^[-]?\\d{1,16}[.]\\d{2,}$"
							},
						    "currency": {
                                "type" : "string",
                                "pattern": "^[A-Z]{3,3}$"
							}
						}
					}
				}
			}
		},
		"links": {
			"type": "object",
			"required": [
				"self"
			],
			"properties": {
				"self": {
					"type": "string",
					"format": "uri"
				}
			}
		},
		"meta": {}
	}
}
