{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://consumerdatastandards.org.au/v1.0.0/transactions",
    "type": "object",
    "required" : [
        "data",
        "links",
        "meta"
        ],
    "properties" : {
        "data" : {
            "type": "object",
            "required" : [
                "transactions"
                ],
            "properties": {
                "transactions": {
                    "type": "array",
                    "items": {
                        "type" : "object",
                        "required" : [
                            "accountId",
                            "amount",
                            "description",
                            "isDetailAvailable",
                            "reference",
                            "status",
                            "type"
                            ],
                        "properties" : {
                            "accountId" : {
                                "type" : "string",
                                "pattern": "^[\x00-\x7F]+$"
                            },
                            "transactionId" : {
                                "type" : "string",
                                "pattern": "^[\x00-\x7F]+$"
                            },
                            "isDetailAvailable" : {
                                "type" : "boolean"
                            },
                            "type" : {
                                "type" : "string",
                                "enum" : [ "FEE", "INTEREST_CHARGED", "INTEREST_PAID", "TRANSFER_OUTGOING", "TRANSFER_INCOMING", "PAYMENT", "DIRECT_DEBIT", "OTHER" ]
                            },
                            "status" : {
                                "type" : "string",
                                "enum" : [ "PENDING", "POSTED" ]
                            },
                            "description" : {
                                "type" : "string"
                            },
                            "postingDateTime" : {
                                "type" : "string",
                                "format": "date-time"
                            },
                            "valueDateTime" : {
                                "type" : "string",
                                "format": "date-time"
                            },
                            "executionDateTime" : {
                                "type" : "string",
                                "format": "date-time"
                            },
                            "amount" : {
                                "type" : "string",
                                "pattern": "^[-]?\\d{1,16}[.]\\d{2,}$"
                            },
                            "currency" : {
                                "type" : "string",
                                "pattern": "^[A-Z]{3}$"
                            },
                            "reference" : {
                                "type" : "string"
                            },
                            "merchantName" : {
                                "type" : "string"
                            },
                            "merchantCategoryCode" : {
                                "type" : "string"
                            },
                            "billerCode" : {
                                "type" : "string"
                            },
                            "billerName" : {
                                "type" : "string"
                            },
                            "crn" : {
                                "type" : "string"
                            },
                            "apcaNumber" : {
                                "type" : "string"
                            }
                        },
                        "allOf": [
                            {
                                "anyOf": [
                                    {
                                        "properties": {
                                            "isDetailAvailable": { "enum": [ false ] }
                                        }
                                    },
                                    {
                                        "required": [ "transactionId" ]
                                    }
                                    ]
                            },
                            {
                                "anyOf": [
                                {
                                    "properties": {
                                        "status": { "enum": ["PENDING"] }
                                    }
                                },
                                {
                                    "required": [ "postingDateTime" ]
                                }
                                ]
                            }
                            ]
                    }
                }
            }
        },
        "links" : {
            "type" : "object",
            "required" : [
                "self"
                ],
            "properties" : {
                "self" : {
                    "type" : "string",
                    "format": "uri"
                },
                "first" : {
                    "type" : "string",
                    "format": "uri"
                },
                "last" : {
                    "type" : "string",
                    "format": "uri"
                },
                "next" : {
                    "type" : "string",
                    "format": "uri"
                },
                "prev" : {
                    "type" : "string",
                    "format": "uri"
                }
            }
        },
        "meta" : {
            "type" : "object",
            "required" : [
                "totalPages",
                "totalRecords"
                ],
            "properties" : {
                "totalRecords" : {
                    "type" : "integer",
                    "minimum": 0
                },
                "totalPages" : {
                    "type" : "integer",
                    "minimum": 0
                }
            }
        }
    }
}
